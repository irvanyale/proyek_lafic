<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:gravity="center"
    android:background="@drawable/background_white_rounded">

    <Button
        android:id="@+id/btn_aman"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:text="SECURE"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_grey"/>

    <Button
        android:id="@+id/btn_hilang"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:text="LOST"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_grey"/>

    <EditText
        android:id="@+id/edtx_lokasi_hilang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:hint="LOCATION LOST"
        android:textColor="@android:color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/edtx_tanggal_hilang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:minWidth="150dp"
        android:hint="DATE LOST"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_calender"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/edtx_waktu_hilang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:minWidth="150dp"
        android:hint="TIME LOST"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_calender"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="UPDATE"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>

</LinearLayout>